<form id="login-widget" action="authenticate.php" method="post" 
	enctype="multipart/form-data">
	<fieldset>
    <center><h3>Login</h3></center>
        Username:<br/>
		<div class= "login-widget">
			<input type="text" name="username" value="Type your Username"
				onBlur="if(this.value=='') this.value='Type your Username'"
				onFocus="if(this.value =='Type your Username' ) this.value=''" /> 
               <!-- <a
				href="#" onClick="document.getElementById('login-wigdet').submit()">Username</a>-->
		</div>
  		<br/>
        Password:<br/>
        <div class= "login-widget">
			<input type="text" name="password" value="Type your Password"
				onBlur="if(this.value=='') {
                this.value='Type your Password'
                type='text'
                }
                "
				onFocus="if(this.value =='Type your Password' ){
                this.value=''
               	type='password'
                }
                "
                 /> <a
				href="#" onClick="document.getElementById('login-widget').submit()">Login</a>
		</div>
	</fieldset>
</form>
